<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/otp_card"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="5dp"
	android:layout_marginVertical="8dp"
	android:background="@drawable/otp_card_bg"
	android:clickable="true"
	android:focusable="true"
	android:layoutDirection="ltr"
	android:orientation="vertical">


	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true">

		<LinearLayout
			android:id="@+id/otp_card_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp"
			android:layout_marginBottom="2dp"
			android:gravity="center"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/otp_actions"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="start"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageButton
					android:id="@+id/share_otp_code"
					android:layout_width="28dp"
					android:layout_height="28dp"
					android:layout_margin="2dp"
					android:background="@null"
					android:contentDescription="@string/share_otp_code_cd"
					android:padding="4dp"
					android:scaleType="fitXY"
					android:src="@drawable/otp_action_share"
					android:tint="#f8f8f8" />

				<ImageButton
					android:id="@+id/copy_otp_code"
					android:layout_width="28dp"
					android:layout_height="28dp"
					android:layout_margin="2dp"
					android:background="@null"
					android:contentDescription="@string/copy_otp_code_cd"
					android:padding="4dp"
					android:scaleType="fitXY"
					android:src="@drawable/otp_action_copy"
					android:tint="#f8f8f8" />

			</LinearLayout>

			<View
				android:layout_width="16dp"
				android:layout_height="0dp" />

			<TextView
				android:id="@+id/otp_code"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|end"
				android:layout_marginStart="13dp"
				android:layout_marginTop="5dp"
				android:layout_marginEnd="5dp"
				android:layout_marginBottom="5dp"
				android:layout_weight="1"
				android:fontFamily="@font/vazir_bold"
				android:gravity="center_vertical|end"
				android:includeFontPadding="false"
				android:text="@string/otp_code"
				android:textColor="#f8f8f8"
				android:textSize="18sp" />

			<ImageView
				android:id="@+id/otp_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_gravity="center_vertical|end"
				android:layout_marginStart="5dp"
				android:layout_marginTop="3dp"
				android:layout_marginEnd="8dp"
				android:layout_marginBottom="3dp"
				android:contentDescription="@string/otp_code_icon_cd"
				android:src="@drawable/one_time_password_icon"
				android:tint="#f8f8f8" />

		</LinearLayout>

		<FrameLayout
			android:id="@+id/otp_expired_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:background="@drawable/otp_expired_bg"
			android:visibility="invisible">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/otp_code_expired_2"
				android:fontFamily="@font/vazirmatn_light"
				android:textColor="@color/colorOnError"/>

		</FrameLayout>

	</FrameLayout>

	<ProgressBar
		android:id="@+id/otp_code_duration_bar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:layout_marginStart="13dp"
		android:layout_marginEnd="13dp"
		android:max="100"
		android:mirrorForRtl="false"
		android:progress="100"
		android:progressTint="@color/otpTimeExpireText"
		android:rotation="180"
		android:scaleY="1.1" />

</LinearLayout>
